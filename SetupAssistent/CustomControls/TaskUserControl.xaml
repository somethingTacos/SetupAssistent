<UserControl x:Class="SetupAssistent.CustomControls.TaskUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SetupAssistent.CustomControls"
             xmlns:cc="clr-namespace:SetupAssistent.CustomControls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Button Height="50" Width="200" Margin="5"
                Command="{Binding TaskCommand, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=cc:TaskUserControl}}">
            <StackPanel>
                <TextBlock Text="{Binding TaskName, RelativeSource={RelativeSource AncestorType=UserControl}}" FontSize="16"
                           HorizontalAlignment="Center"/>
                <TextBlock Text="{Binding TaskDescription, RelativeSource={RelativeSource AncestorType=UserControl}}" FontSize="10"
                           HorizontalAlignment="Center"/>
            </StackPanel>
        </Button>
    </Grid>
</UserControl>
