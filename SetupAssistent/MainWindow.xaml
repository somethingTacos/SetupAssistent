<Window x:Class="SetupAssistent.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SetupAssistent"
        xmlns:views="clr-namespace:SetupAssistent.Views"
        xmlns:vm="clr-namespace:SetupAssistent.ViewModel"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="600" WindowStartupLocation="CenterScreen"
        MinHeight="400" MinWidth="600">
    <Window.Resources>
        <DataTemplate DataType="{x:Type vm:ModuleViewModel}">
            <views:ModuleView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:TasksViewModel}">
            <views:TasksView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:CreateNewModuleViewModel}">
            <views:CreateNewModuleView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:CreateNewTaskViewModel}">
            <views:CreateNewTaskView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:AddTasksViewModel}">
            <views:AddTasksView/>
        </DataTemplate>

    </Window.Resources>
    <DockPanel LastChildFill="True">
        <ContentControl x:Name="Pages" DockPanel.Dock="Right" Content="{Binding SelectedViewModel}"/>
    </DockPanel>
</Window>
